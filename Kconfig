config CHARGE_MANAGER
    tristate "charge manager"
    depends on BATTERY_CHARGER
    select UORB
    default n

if CHARGE_MANAGER

config CHARGE_MANAGER_PRIORITY
    int "task priority"
    default 100

config CHARGE_MANAGER_STACKSIZE
    int "stack size"
    default DEFAULT_TASK_STACKSIZE

config CHARGE_MANAGER_PROGRAM_NAME
    string "charge manager program name"
    default "healthd"

endif # CHARGE_MANAGER
